<%= link_to 'Add patient', new_patient_path, class: 'btn btn-primary' %>
<table class='table'>
  <thead>
    <tr>
      <td>Name</td>
      <td>Age</td>
      <td>Phone Number</td>
      <td>Action</td>
    </tr>
  </thead>
  <tbody>
      <% @patients.each do |patient| %>
      <tr>
        <td><%= link_to patient.name, patient_path(patient) %></td>
        <td><%= patient.age %></td>
        <td><%= patient.phone_number %></td>
        <td>
          <%= link_to 'Edit', edit_patient_path(patient), class: 'btn btn-warning'%>
          <%= link_to 'Delete', patient_path(patient), method: :delete, class: 'btn btn-danger'%>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>
