<div class='jumbotron'>
  <h1><%= @patient.id ? ('Edit Patient') : ('Create Patient') %></h1>
  <%= form_for @patient do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :age %>
    <%= f.text_field :age %>
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
    <%= f.submit %>
  <% end %>
</div>
