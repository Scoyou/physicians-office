<h1>Appointments</h1>

<table class='table'>
  <thead>
    <tr>
      <td>Date</td>
      <td>Time</td>
      <td>Physician</td>
    </tr>
  </thead>
  <tbody>
    <% @patient.appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.date %></td>
        <td><%= appointment.time %></td>
        <td><%= Physician.find(appointment.physician_id).name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
