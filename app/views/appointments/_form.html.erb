<div class='jumbotron'>
  <h1><%= @appointment.id ? ('Edit Appointment') : ('Create Appointment') %></h1>
  <%= form_for [@physician, @appointment] do |f| %>
    <%= f.label :date %>
    <%= f.text_field :date %>
    <%= f.label :time %>
    <%= f.text_field :time %>
    <%= f.label :patient_id %>
    <%= f.text_field :patient_id %>
    <%= f.submit %>
  <% end %>
</div>
